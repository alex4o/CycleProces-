<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:CycleProcessControll.Pattern.ViewModel" x:Class="CycleProcessControll.Pattern.View.TimePatternView" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200">
	<DockPanel>
		<DockPanel.DataContext>
			<ViewModel:TimePatternViewModel/>
		</DockPanel.DataContext>
		<ComboBox DockPanel.Dock="Bottom" Margin="5" SelectedItem="{Binding Path=SelectedFile,Mode=OneWayToSource}" ItemsSource="{Binding Path=Patterns}"/>
		<ListBox Grid.Column="1" ItemsSource="{Binding Path=Pattern, IsAsync=True}" BorderBrush="{x:Null}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock Text="{Binding Name, Mode=TwoWay}"/>
						<StackPanel Orientation="Horizontal">
							<TextBlock><Run Text="Продължителност:"/></TextBlock>
							<TextBlock Text="{Binding Period, Mode=TwoWay}" Margin="5,0,0,0"/>

						</StackPanel>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</DockPanel>
</UserControl>
